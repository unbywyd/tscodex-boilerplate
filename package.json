{
  "name": "@tscodex/blueprint",
  "version": "1.0.0",
  "description": "LLM-driven project specification generator. From idea to working prototype through structured dialogue.",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --config core/app/vite.config.ts",
    "build": "tsx core/builder/build.ts && vite build --config core/app/vite.config.ts",
    "preview": "vite preview --config core/app/vite.config.ts",
    "lint": "eslint core/app/src --ext .ts,.tsx",
    "typecheck": "tsc -p core/app/tsconfig.json --noEmit",
    "prisma:validate": "prisma validate --schema=src/prisma/schema.prisma",
    "prisma:format": "prisma format --schema=src/prisma/schema.prisma"
  },
  "keywords": [
    "codex",
    "specification",
    "llm",
    "ai",
    "prototype",
    "generator",
    "toml",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hookform/resolvers": "^3.9.1",
    "@iarna/toml": "^3.0.0",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.2",
    "@types/dagre": "^0.7.53",
    "@types/prismjs": "^1.26.5",
    "@xyflow/react": "^12.10.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.4",
    "dagre": "^0.8.5",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.468.0",
    "mermaid": "^11.12.2",
    "prismjs": "^1.30.0",
    "react": "^19.2.1",
    "react-day-picker": "^9.4.4",
    "react-dom": "^19.2.1",
    "react-hook-form": "^7.54.2",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^7.1.3",
    "sonner": "^1.7.1",
    "tailwind-merge": "^2.6.0",
    "vaul": "^1.1.2",
    "zod": "^3.24.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "prisma": "^7.1.0",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.7"
  }
}
